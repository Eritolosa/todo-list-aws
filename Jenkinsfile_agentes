pipeline {
    agent any
    environment {
        AWS_REGION = 'us-east-1'
        STACK_NAME = 'todo-list-staging'
    }
    stages {
        stage('Get Code') {
            agent any
            steps {
                echo 'Descargando c칩digo fuente'
                checkout scm
                bat 'whoami'
                bat 'hostname'
            }
        }
        stage('Static Test') {
            agent { label 'linux-agent1' }
            steps {
                echo 'Ejecutando an치lisis est치tico con Flake8 y Bandit'
                bat 'whoami'
                bat 'hostname'
                bat 'python -m pip install --upgrade pip'
                bat 'pip install flake8 bandit'
                bat 'flake8 src > flake8_report.txt || exit 0'
                bat 'bandit -r src > bandit_report.txt || exit 0'
                bat 'type flake8_report.txt'
                bat 'type bandit_report.txt'
            }
        }
        stage('Deploy') {
            agent any
            steps {
                echo "Desplegando SAM en Staging"
                bat "echo Simulando 'sam build'"
                bat "echo Simulando 'sam deploy --stack-name %STACK_NAME% --region %AWS_REGION%'"
                bat 'whoami'
                bat 'hostname'
            }
        }
        stage('Rest Test') {
            agent { label 'linux-agent2' }
            steps {
                echo "Ejecutando pruebas de integraci칩n REST con curl (solo lectura)"
                bat 'whoami'
                bat 'hostname'
                bat 'test_curl.bat'
            }
        }
        stage('Promote') {
            agent any
            steps {
                echo "Simulando merge a master"
                bat 'whoami'
                bat 'hostname'
            }
        }
    }
    post {
        always {
            echo "Limpieza de workspace"
            cleanWs()
        }
    }
}
